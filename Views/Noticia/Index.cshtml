@model Noticia
@{
    ViewData["Title"] = "Noticia";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdNoticia" />
    
    <label>Título</label>
    <input type="text" name="Título" />

    <label>Texto</label>
    <input type="text" name="Texto" />

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Título</th>
        <th>Texto</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach (Noticia noticia in ViewBag.Noticias)
        {
            <tr>
                <td>@noticia.IdNoticia</td>
                <td>@noticia.Titulo</td>
                <td>@noticia.Texto</td>
                <td><img src="/img/Noticias/@noticia.Imagem" alt="Imagem da noticia @noticia.Titulo" width="40"></td>
                <td><a asp-area="link para excluir uma noticia" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@noticia.IdNoticia">excluir</a></td>
            </tr>
        }
    </tbody>
</table>
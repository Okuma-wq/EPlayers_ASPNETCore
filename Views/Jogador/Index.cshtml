@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="IdJogador" />
    
    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>IdEquipe</label>
    <input type="text" name="IdEquipe" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>ID da Equipe</th>
    </thead>
    <tbody>
        @foreach (Jogador j in ViewBag.Jogadores)
        {
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.IdEquipe</td>
                <td><a asp-area="link para excluir um jogador" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@j.IdJogador">excluir</a></td>
            </tr>
        }
    </tbody>
</table>